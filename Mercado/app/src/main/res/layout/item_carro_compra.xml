<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardVenta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="#80D4FA"
    android:clickable="true"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustResize"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProductoVenta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="20dp"
        android:clickable="false"
        android:minHeight="48dp"
        android:orientation="horizontal"
        tools:ignore="TouchTargetSizeCheck">

        <TextView
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:textAlignment="center"
            android:textColor="#070707" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:text="@string/txtPrecio"
            android:textAlignment="center"
            android:textColor="#020202" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textAlignment="center"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtCantidadVenta"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:contextClickable="false"
            android:ems="10"
            android:enabled="true"
            android:includeFontPadding="false"
            android:inputType="number"
            android:linksClickable="false"
            android:longClickable="false"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txtPrecioVenta"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:contextClickable="false"
            android:ems="10"
            android:enabled="true"
            android:inputType="numberDecimal"
            android:linksClickable="false"
            android:longClickable="false"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/txtTotalProducto"
            android:layout_width="95dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background"
            android:clickable="false"
            android:contextClickable="false"
            android:ems="10"
            android:enabled="true"
            android:inputType="numberDecimal"
            android:linksClickable="false"
            android:longClickable="false"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnEliminarDeCarro"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="#BD0101"
            app:srcCompat="@android:drawable/ic_menu_delete"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

</LinearLayout>