<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login_edit"
    android:backgroundTint="#777777"
    android:backgroundTintMode="multiply"
    tools:context=".Login">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="359dp"
        android:layout_height="201dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_usuario" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvNomUsuarioVer"

        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:hint="Nombre de Usuario"
        android:textColorHint="@color/cardview_dark_background"
        app:boxBackgroundColor="#FFFFFF"
        app:boxCornerRadiusBottomEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtNombreUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C1C1C1"
            android:shadowRadius="20"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="372dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:textColorHint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNomUsuarioVer"
        app:passwordToggleEnabled="true"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#050505"
            android:backgroundTint="#C1C1C1"
            android:drawableTint="#03A9F4"
            android:hint="ContraseÃ±a"
            android:textColor="#5C5B5B"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="222dp"
        android:layout_height="48dp"
        android:layout_marginTop="96dp"
        android:backgroundTint="#2196F3"
        android:text="INGRESAR"
        android:textColor="#FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>